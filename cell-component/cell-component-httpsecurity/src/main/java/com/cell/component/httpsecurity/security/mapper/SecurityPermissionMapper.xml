<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cell.component.httpsecurity.security.mapper.SecurityPermissionMapper">

    <resultMap type="com.cell.component.httpsecurity.security.entity.SecurityPermission"
               id="SecurityPermissionResultMap">
        <result property="permissionId" column="permission_id" jdbcType="INTEGER"/>
        <result property="permissionType" column="permission_type" jdbcType="VARCHAR"/>
        <result property="permissionDesc" column="permission_desc" jdbcType="VARCHAR"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="updateDate" column="update_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="table_field">
        permission_id
        , permission_type, permission_desc, create_date, update_date
    </sql>

    <!--通过Id查询单个-->
    <select id="getById" resultMap="SecurityPermissionResultMap" parameterType="java.lang.Integer">
        select
        <include refid="table_field"/>
        from security_permission
        where permission_id = #{permissionId,jdbcType=INTEGER}
    </select>


    <!--通过实体不为空的属性作为筛选条件查询列表-->
    <select id="listByEntity" resultMap="SecurityPermissionResultMap"
            parameterType="com.cell.component.httpsecurity.security.entity.SecurityPermission">
        select
        <include refid="table_field"/>
        from security_permission
        <where>
            <if test="permissionId != null">
                and permission_id = #{permissionId,jdbcType=INTEGER}
            </if>
            <if test="permissionType != null">
                and permission_type = #{permissionType,jdbcType=VARCHAR}
            </if>
            <if test="permissionDesc != null">
                and permission_desc = #{permissionDesc,jdbcType=VARCHAR}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate,jdbcType=TIMESTAMP}
            </if>
            <if test="updateDate != null">
                and update_date = #{updateDate,jdbcType=TIMESTAMP}
            </if>
        </where>
    </select>

    <!--通过实体不为空的属性作为筛选条件查询单个-->
    <select id="getByEntity" resultMap="SecurityPermissionResultMap"
            parameterType="com.cell.component.httpsecurity.security.entity.SecurityPermission">
        select
        <include refid="table_field"/>
        from security_permission
        <where>
            <if test="permissionId != null">
                and permission_id = #{permissionId,jdbcType=INTEGER}
            </if>
            <if test="permissionType != null">
                and permission_type = #{permissionType,jdbcType=VARCHAR}
            </if>
            <if test="permissionDesc != null">
                and permission_desc = #{permissionDesc,jdbcType=VARCHAR}
